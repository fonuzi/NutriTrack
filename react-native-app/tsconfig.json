{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@assets/*": ["assets/*"],
      "@api/*": ["src/api/*"],
      "@context/*": ["src/context/*"],
      "@utils/*": ["src/utils/*"]
    }
  }
}